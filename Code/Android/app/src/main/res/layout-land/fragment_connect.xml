<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ImageButton
        android:layout_width="384dp"
        android:layout_height="60dp"
        android:id="@+id/customBackButton"
        android:background="@drawable/header_connect"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customBackButton"
        android:id="@+id/scrollView2"
        android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/connect1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="Institute of Human Origins                                                                    >"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/connect4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="Ask An Anthropologist                                                                          >"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/connect2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="Becoming Human                                                                                   >"
            android:onClick="onClick"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/connect3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="Sign Up for E-News                                                                                 >"
            android:onClick="onClick"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like us on Facebook, follow us on Twitter and Instagram! "
            android:textSize="20dp"
            android:paddingLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="40dp"
            android:weightSum="1">

            <ImageButton
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:id="@+id/fbButton"
            android:background="@drawable/fb"
            android:onClick="onClick"
            android:layout_weight="0.24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="             "/>
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:id="@+id/twButton"
            android:background="@drawable/twitter"
            android:onClick="onClick"
            android:layout_weight="0.32" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="             "/>

            <ImageButton
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:id="@+id/instaButton"
            android:background="@drawable/insta"
            android:onClick="onClick"
            android:layout_weight="0.24" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
