<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/per_event">
    <ImageButton
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:id="@+id/customEventsBackbutton"
        android:background="@drawable/header_events"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customEventsBackbutton"
        android:id="@+id/scrollView2"
        android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.30"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:maxLength="56"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/space1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="56"
            android:ellipsize="end"
            android:text="                                                                   "/>
        <TextView
            android:id="@+id/when"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:maxLines="1"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="56"
            android:ellipsize="end"
            android:text="                                                                   "/>
        <TextView
            android:id="@+id/where"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:maxLines="3"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/space3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="56"
            android:ellipsize="end"
            android:text="                                                                   "/>

        <Button
            android:id="@+id/eventsLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="MapIt"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:maxLines="13"
            android:maxLength="740"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/space4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:maxLines="2"
            android:maxLength="104"
            android:ellipsize="end"
            android:text="                                                                                                                 "/>
        <Button
            android:id="@+id/registerEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="Register For This Event"
            android:onClick="onClick"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>