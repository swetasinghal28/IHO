<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/customBackButtonll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#003366"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:onClick="onClick" >

        <ImageButton
            android:id="@+id/customBackButton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow"
            android:onClick="onClick" />

        <LinearLayout

            android:layout_width="345dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Gallery"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customBackButtonll"
        android:id="@+id/scrollView2"
        android:background="@android:color/background_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@android:color/black"
                android:gravity="center">

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="299dp"
                    android:id="@+id/imageView"
                    android:background="@drawable/gallery"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView
                android:id="@+id/textspace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="center"
                android:maxLines="2"
                android:text="                                                                                                                 "
                android:maxLength="104"
                android:background="@android:color/white"/>
            <Button
                android:id="@+id/galleryBtn"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="View Image Gallery"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:onClick="onClick"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/textspace4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit our YouTube and Vimeo pages below!"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:id="@+id/textspace1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="center"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textspace2"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>
                <ImageButton
                    android:layout_width="144dp"
                    android:layout_height="79dp"
                    android:id="@+id/youtubeBtn"
                    android:background="@drawable/youtube"
                    android:onClick="onClick" />
                <TextView
                    android:id="@+id/textspace3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    />
                <ImageButton
                    android:layout_width="111dp"
                    android:layout_height="76dp"
                    android:id="@+id/vimeoBtn"
                    android:background="@drawable/vimeo"
                    android:onClick="onClick"
                     />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>
