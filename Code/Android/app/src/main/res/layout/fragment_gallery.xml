<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/customBackButtonll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#003366"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageButton
            android:id="@+id/customBackButton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow"
            android:onClick="onClick" />

        <LinearLayout

            android:layout_width="345dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Gallery"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customBackButtonll"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@android:color/white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="340dp"
                    android:layout_height="299dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gallery" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textspace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:maxLength="104"
                android:maxLines="2"
                android:text="                                                                                                                 "
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:id="@+id/galleryBtn"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="View Image Gallery"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textspace4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Visit our YouTube and Vimeo pages below!"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textspace1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:weightSum="5.0">


                <ImageButton
                    android:id="@+id/youtubeBtn"
                    android:layout_height="79dp"
                    android:background="@drawable/youtube"
                    android:onClick="onClick"
                    android:layout_weight="2.0"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/textspace3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="  "
                    android:layout_weight="1.0"/>

                <ImageButton
                    android:id="@+id/vimeoBtn"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:background="@drawable/vimeo"
                    android:onClick="onClick"
                    android:layout_weight="1.8"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
