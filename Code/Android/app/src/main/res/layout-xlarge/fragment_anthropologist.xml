<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/customConnectBackButtonll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#003366"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:onClick="onClick" >

        <ImageButton
            android:id="@+id/customConnectBackButton"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow"
            android:onClick="onClick" />

        <LinearLayout

            android:layout_width="420dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Ask An Anthropologist"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="26dp"
        android:id="@+id/anthropologistLayout"
        android:background="@drawable/border"
        android:layout_below="@+id/customConnectBackButtonll">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:id="@+id/imageView"
                android:background="@drawable/anthropologist"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/askananthropologist"
            android:textSize="22dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_gravity="left"
            android:paddingRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/visitAskAnAnthropologist"
            android:layout_width="374dp"
            android:layout_height="70dp"
            android:layout_weight="0.00"
            android:background="@drawable/shape"
            android:text="Visit AskAnAnthropologist"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:onClick="onClick"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</RelativeLayout>