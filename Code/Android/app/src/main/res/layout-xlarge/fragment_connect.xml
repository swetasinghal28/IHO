<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/customBackButton"
        android:layout_width="384dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_connect"
        android:onClick="onClick" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customBackButton"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/connect1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="Institute of Human Origins                                                                                 >"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/connect4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="Ask An Anthropologist                                                                                        >"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/connect2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="Becoming Human                                                                                                 >"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/connect3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="Sign Up for E-News                                                                                              >"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Like us on Facebook, follow us on Twitter and Instagram! "
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:visibility="visible"
                android:weightSum="1">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/fbButton"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:background="@drawable/fb"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/twButton"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:background="@drawable/twitter"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/instaButton"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:background="@drawable/insta"
                    android:onClick="onClick" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
