<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/per_event"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/customEventsBackbutton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_events"
        android:onClick="onClick" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customEventsBackbutton"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.30"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:weightSum="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="56"
                android:maxLines="2"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/space1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="56"
                android:maxLines="1"
                android:text="                                                                   "
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/when"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/space2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="56"
                android:maxLines="1"
                android:text="                                                                   "
                android:textAlignment="center"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/where"
                        android:layout_width="325dp"
                        android:layout_height="100dp"
                        android:layout_gravity="left"
                        android:text="@string/locationInfo"
                        android:textAlignment="textStart"
                        android:textSize="22dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/eventsLink"
                    android:layout_width="80dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center"
                    android:background="@drawable/location"
                    android:onClick="onClick" />
            </LinearLayout>

            <TextView
                android:id="@+id/space3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="56"
                android:maxLines="1"
                android:text="                                                                   "
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="740"
                android:maxLines="13"
                android:textAlignment="center"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/space4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="104"
                android:maxLines="2"
                android:text="                                                                                                                 "
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:id="@+id/registerEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="Click to read more"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>